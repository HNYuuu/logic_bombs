{
    "general": {
        "CC": "gcc",
        "CPP": "g++"
    },

    "crypto_lib": {
        "mkdir": [
            "tmp",
            "bin"
        ],
        "cmd": [
            "{CC} -I{INCLUDE} -c -Wall -Werror -fpic -o tmp/{&FILENAME}.o {!FILENAME}",
            "ar cr bin/lib{OUTPUT}.a {!INPUTS} #BATCH"
        ],
        "dependencies": {
            "FILENAME": ["lib/sha1.c", "lib/aes.c", "lib/crypto_utils.c"],
            "INPUTS": ["tmp/.*\\.o"],
            "INCLUDE": "include",
            "OUTPUT": "crypto"
        },
        "exceptions": {

        },
        "rm": [
            "tmp"
        ]
    },

    "utils_lib": {
        "mkdir": [
            "tmp",
            "bin"
        ],
        "cmd": [
            "{CC} -I{INCLUDE} -c -Wall -Werror -fpic -o tmp/{&OUTPUT}.o {!FILENAME} #SINGLE",
            "ar cr bin/lib{OUTPUT}.a {!INPUTS} #BATCH"
        ],
        "dependencies": {
            "FILENAME": ["lib/utils.c"],
            "INPUTS": ["tmp/.*\\.o"],
            "INCLUDE": "include",
            "OUTPUT": "utils"
        },
        "exceptions": [
            "src/exception_handling"
        ],
        "rm": [
            "tmp"
        ]
    },

    "src": {
        "mkdir": [
            "bin/outputs/"
        ],
        "cmd": [
            "{CC} -I{INCLUDE} -Lbin -o bin/outputs/{&FILENAME}.out -xc - -lpthread -lm -lutils -lcrypto #PIPE"
        ],
        "dependencies": {
            "PATH": "src/",
            "INCLUDE": "include",
            "TEMPLATE": "templates/default.c"
        },
        "exceptions": [
            "src/exception_handling"
        ],
        "rm": [
        ]
    },

    "src_cpp": {
        "CC": "g++",
        "mkdir": [
            "bin/outputs/"
        ],
        "cmd": [
            "{CC} -I{INCLUDE} -Lbin -o bin/outputs/{&FILENAME}.out -xc++ - -lpthread -lm -lutils -lcrypto #PIPE"
        ],
        "dependencies": {
            "PATH": "src/exception_handling",
            "INCLUDE": "include",
            "TEMPLATE": "templates/default.c"
        },
        "exceptions": [
        ],
        "rm": [
        ]
    }
}
